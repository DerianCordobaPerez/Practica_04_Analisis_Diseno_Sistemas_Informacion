<div class="card bg-dark shadow">
    <div class="card-header">
        <h1 class="text-muted">
            Edición de producto
        </h1>

        <h4 class="text-muted">
            Datos generales
        </h4>
    </div>

    <div class="card-body">
        <form action="/products/{{product.slug}}/edit?_method=PUT" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_method" value="PUT">
            <div class="row mt-2">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="text-muted" for="name">Nombre</label>
                        <input class="form-control" type="text" name="name" id="name" value="{{product.name}}" required />
                    </div>

                    <div class="form-group">
                        <label class="text-muted" for="price">Precio</label>
                        <input class="form-control" type="number" name="price" id="price" min="0" value="{{product.price}}" required />
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="text-muted" for="quantity">Cantidad</label>
                        <input class="form-control" type="number" name="quantity" id="quantity" min="0" value="{{product.quantity}}" required />
                    </div>

                    <div class="form-group">
                        <label class="text-muted" for="description">Descripción</label>
                        <textarea class="form-control" name="description" id="description" rows="7">{{product.description}}</textarea>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="text-muted">Imagenes</label>
                        <input type="file" name="products" class="form-control" multiple />
                        {{#if product.images}}
                        <div class="row mt-4">
                            {{#each product.images}}
                            <div class="col-md-4">
                                <img src="/images/products/{{this}}" class="img-fluid img-thumbnail" />
                            </div>
                            {{/each}}
                            <span class="text-muted mt-2">
                                * Imagenes previamente subidas
                            </span>
                        </div>
                        {{else}}
                        <div class="alert alert-info mt-4">
                            * Previamente no se han agregados imágenes
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-2">
                    <button class="btn btn-primary" type="submit">Editar producto</button>
                </div>

                <div class="col-md-4 d-flex align-items-center">
                    <span class="text-muted">
                        * Todos los campos son obligatorios
                    </span>
                </div>
            </div>
        </form>
    </div>
</div>